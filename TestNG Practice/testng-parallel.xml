<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Parallel Execution Suite" parallel="tests" thread-count="3" verbose="1">
    
    <listeners>
        <listener class-name="test.Listeners"/>
    </listeners>
    
    <!-- Test 1: UI Tests -->
    <test name="UI Tests" parallel="methods" thread-count="2">
        <groups>
            <run>
                <include name="UI"/>
            </run>
        </groups>
        <classes>
            <class name="test.ExampleClass3"/>
        </classes>
    </test>
    
    <!-- Test 2: API Tests -->
    <test name="API Tests">
        <groups>
            <run>
                <include name="API"/>
            </run>
        </groups>
        <classes>
            <class name="test.ExampleClass2"/>
            <class name="test.ExampleClass3"/>
        </classes>
    </test>
    
    <!-- Test 3: Mobile Tests -->
    <test name="Mobile Tests">
        <groups>
            <run>
                <include name="Mobile"/>
            </run>
        </groups>
        <classes>
            <class name="test.ExampleClass3"/>
        </classes>
    </test>
    
</suite>